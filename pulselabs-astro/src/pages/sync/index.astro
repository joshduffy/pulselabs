  .audience-card p {
    color: var(--text-medium);
    font-size: 0.95rem;
  }

  .privacy-badge {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-weight: 600;
  }

  /* Hero Phone Screen Content */
  .screen-content {
    width: 100%;
    height: 100%;
    padding: 3rem 1rem 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .screen-header {
    font-size: 1rem;
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: 1rem;
  }

  .calendar-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 4px;
    width: 100%;
    max-width: 220px;
  }

  .cal-day {
    font-size: 0.6rem;
    font-weight: 600;
    color: var(--text-light);
    text-align: center;
    padding: 4px;
  }

  .cal-num {
    font-size: 0.7rem;
    text-align: center;
    padding: 6px 4px;
    border-radius: 50%;
    color: var(--text-medium);
  }

  .cal-num.period {
    background: linear-gradient(135deg, var(--accent), var(--accent-light));
    color: white;
  }

  .cal-num.fertile {
    background: rgba(0, 180, 160, 0.15);
    color: var(--primary);
  }

  .cal-num.peak {
    background: linear-gradient(135deg, var(--primary), var(--primary-light));
    color: white;
    font-weight: 700;
  }

  .screen-legend {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
    font-size: 0.65rem;
  }

  .legend-item {
