  }

  @media (min-width: 768px) {
    .screenshot-gallery {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .screenshot-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .screenshot-label {
    font-size: 0.9rem;
