<style>
  .price-tag {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary);
  }
  .price-tag span {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-light);
  }

  .phone-frame {
    width: min(200px, 55vw);
    border-radius: clamp(20px, 6vw, 40px);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  @media (min-width: 480px) {
    .phone-frame {
      width: min(240px, 60vw);
    }
  }

  @media (min-width: 768px) {
    .phone-frame {
      width: 280px;
    }
  }

  .phone-screenshot {
    width: 100%;
    height: auto;
    display: block;
  }

  .gallery-screenshot {
    width: 100%;
    height: auto;
    border-radius: clamp(10px, 3vw, 16px);
    box-shadow: var(--shadow-md);
  }

  .feature-card {
    background: var(--bg-light);
    border-radius: var(--radius-md);
    padding: 2rem;
    text-align: center;
  }

  .feature-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .feature-card h3 {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: 0.5rem;
  }

  .feature-card p {
    color: var(--text-medium);
    font-size: 0.95rem;
  }

  .audience-card {
    background: white;
    border-radius: var(--radius-md);
    padding: 2rem;
    text-align: center;
    border: 1px solid rgba(0,180,160,0.1);
  }

  .audience-card h3 {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: 0.5rem;
  }

  .audience-card p {
    color: var(--text-medium);
    font-size: 0.95rem;
  }

  .privacy-badge {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-weight: 600;
  }

  /* Screenshot Gallery */
  .screenshot-gallery {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    max-width: 900px;
    margin: 0 auto;
  }

  @media (min-width: 480px) {
    .screenshot-gallery {
      gap: 1.5rem;
    }
  }

  @media (min-width: 640px) {
    .screenshot-gallery {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }

  @media (min-width: 768px) {
    .screenshot-gallery {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .screenshot-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .screenshot-label {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text-dark);
  }
</style>
