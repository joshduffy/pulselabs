<style>
  .price-tag {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary);
  }
  .price-tag span {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-light);
  }

  .phone-mockup {
    width: 280px;
    height: 560px;
    background: linear-gradient(180deg, #1A3A4A 0%, #0D1F28 100%);
    border-radius: 40px;
    padding: 12px;
    box-shadow: var(--shadow-lg), inset 0 0 0 3px rgba(255,255,255,0.1);
  }

  .phone-screen {
    width: 100%;
    height: 100%;
    background: var(--bg-light);
    border-radius: 32px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .phone-notch {
    position: absolute;
    top: 8px;
    width: 100px;
    height: 28px;
    background: #1A3A4A;
    border-radius: 20px;
  }

  .phone-app-icon {
    width: 100px;
    height: 100px;
    border-radius: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-md);
    margin-bottom: 1.5rem;
  }

  .phone-app-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-dark);
  }

  .phone-app-tagline {
    font-size: 0.9rem;
    font-style: italic;
  }

  .feature-card {
    background: var(--bg-light);
    border-radius: var(--radius-md);
    padding: 2rem;
    text-align: center;
  }

  .feature-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .feature-card h3 {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: 0.5rem;
  }

  .feature-card p {
    color: var(--text-medium);
    font-size: 0.95rem;
  }

  .audience-card {
    background: white;
    border-radius: var(--radius-md);
    padding: 2rem;
    text-align: center;
    border: 1px solid rgba(0,180,160,0.1);
  }

  .audience-card h3 {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: 0.5rem;
