  /* Privacy Demo */
  .privacy-demo {
    background: linear-gradient(180deg, rgba(0, 180, 160, 0.05) 0%, var(--bg-light) 100%);
  }

  .privacy-icon {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .privacy-text {
    font-size: 0.8rem;
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: 0.75rem;
  }

  .privacy-check {
    font-size: 0.6rem;
    color: var(--primary);
    margin-bottom: 0.25rem;
  }
</style>
